{
  "consumer": {
    "name": "Mail Service Consumer"
  },
  "provider": {
    "name": "Mail Service API"
  },
  "interactions": [
    {
      "description": "A POST request to send the mail",
      "providerState": "A valid mail model containing all required elements",
      "request": {
        "method": "post",
        "path": "/api/mail",
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "message": "The mail has been sent successfully."
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "1.0.0"
    }
  }
}